{{#if prompt}}
    <option value="{{prompt.value}}">{{prompt.label}}</option>
{{/if}}

{{#each content as |item|}}
    <option value={{get item optionValuePath}} selected={{is-equal value (get item optionValuePath) type='string'}}>
        {{#if yield}}
            {{yield item this}}
        {{else}}
            {{get item optionLabelPath}}
        {{/if}}
    </option>
{{/each}}
